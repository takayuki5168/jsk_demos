<launch>
  <arg name="gui" default="true"/>

  <include file="$(find openni2_launch)/launch/openni2.launch" />
  
  <node name="camera_tf_publisher"
        pkg="tf" type="static_transform_publisher"
        args="0 0 1 0 0 -1.57 map camera_depth_optical_frame 10" />

  <node name="add_color_from_image"
        pkg="nodelet" type="nodelet"
        args="load jsk_pcl/AddColorFromImage">
    <remap from="~input" to="/camera/depth/points" />
    <remap from="~input/image" to="/camera/rgb/image_raw" />
    <remap from="~input/camera_info" to="/camera/rgb/camera_info" />
  </node>
  
  <group if="$(arg gui)">
    <node name="rviz"
          pkg="rviz" type="rviz"
          args="-d $(find jsk_2020_04_chahakobi)/config/xtion_test.rviz"/>
  </group>

</launch>
